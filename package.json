{
  "name": "allusion",
  "productName": "Allusion",
  "version": "0.0.1",
  "description": "A tool for managing your visual library",
  "main": "build/main.bundle.js",
  "scripts": {
    "dev": "rimraf build && webpack --watch --config ./webpack.dev.js --progress --colors",
    "production": "rimraf build && webpack --config ./webpack.prod.js",
    "start": "electron ./build/main.bundle.js",
    "lint": "eslint src/**/*{ts,tsx} -f codeframe",
    "test": "jest",
    "package": "yarn build && electron-builder",
    "build": "rimraf dist && yarn production && ncp ./resources/logo ./build/icons",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.allusion-app.allusion",
    "productName": "Allusion",
    "mac": {
      "category": "public.app-category.graphics-design"
    },
    "dmg": {
      "icon": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Graphics"
    },
    "files": [
      "build/**/*",
      "package.json"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allusion-app/Allusion.git"
  },
  "author": "Allusion-App",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/allusion-app/Allusion/issues"
  },
  "homepage": "https://github.com/allusion-app/Allusion#readme",
  "devDependencies": {
    "@svgr/webpack": "^5.4.0",
    "@types/chrome": "^0.0.86",
    "@types/fs-extra": "^9.0.0",
    "@types/jest": "^25.2.3",
    "@types/offscreencanvas": "^2019.6.2",
    "@types/react": "^16.9.36",
    "@types/react-color": "^3.0.2",
    "@types/react-dom": "^16.9.8",
    "@types/react-transition-group": "^4.4.0",
    "@types/react-window": "^1.8.2",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "css-loader": "^3.6.0",
    "electron": "^8.2.1",
    "electron-builder": "^22.7.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.2.0",
    "jest": "^25.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "ncp": "^2.0.0",
    "node-loader": "^0.6.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "ts-jest": "^25.3.0",
    "ts-loader": "^7.0.5",
    "typescript": "^3.8.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "worker-loader": "^2.0.0"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.25.0",
    "@blueprintjs/datetime": "^3.16.0",
    "@blueprintjs/select": "^3.12.1",
    "chokidar": "^3.4.0",
    "dexie": "^2.0.4",
    "electron-updater": "^4.3.1",
    "fs-extra": "^9.0.1",
    "image-size": "^0.8.3",
    "mobx": "^5.15.4",
    "mobx-react-lite": "^2.0.7",
    "react": "^16.13.1",
    "react-color": "^2.18.1",
    "react-dom": "^16.13.1",
    "react-responsive-pinch-zoom-pan": "^0.3.0",
    "react-transition-group": "^4.4.0",
    "react-window": "^1.8.5",
    "sourcemapped-stacktrace": "^1.1.11",
    "uuid": "^8.0.0"
  }
}
