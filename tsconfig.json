{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "components/*": ["components/*"]
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "target": "es5",
    "lib": ["dom", "esnext", "webworker"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "strict": true
  },
  "include": ["components/**/*", "src/**/*", "custom.d.ts", "types/*.d.ts"],
  "exclude": ["dist", "resources"]
}
