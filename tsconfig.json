{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "target": "es5",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "strict": true,
  },
  "include": [
    "src/**/*",
    "custom.d.ts",
    "types/*.d.ts"
  ]
}
